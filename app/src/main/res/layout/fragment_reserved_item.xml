<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ReservedItemFragment"
    android:animateLayoutChanges="true">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <ScrollView
            android:id="@+id/scrollViewDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:src="@drawable/diamond_2"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diamond_1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="18dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"/>



<!--TODO: ITEM DETAILS-->
                <Button
                    android:id="@+id/btnItemDetails"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Details"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_red_24dp"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_red_24dp"
                    android:layout_gravity="top|start"
                    android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                </Button>

                <RelativeLayout
                    android:id="@+id/relLayItemDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRICE"/>

                    <TextView
                        android:id="@+id/tvItemKarats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KARATS"
                        android:layout_toRightOf="@id/tvItemPrice"
                        android:layout_toEndOf="@id/tvItemPrice"/>

                    <TextView
                        android:id="@+id/tvItemYesOrNoDiamond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WITH DIAMOND"
                        android:layout_below="@id/tvItemPrice"/>

                    <TextView
                        android:id="@+id/tvItemGrams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GRAMS"
                        android:layout_toEndOf="@id/tvItemYesOrNoDiamond"
                        android:layout_toRightOf="@id/tvItemYesOrNoDiamond"
                        android:layout_below="@id/tvItemPrice"/>

                    <TextView
                        android:id="@+id/tvItemDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvItemYesOrNoDiamond"
                        android:text="@string/lorem"
                        android:padding="3dp"/>

                </RelativeLayout>


<!--TODO: RESERVATION DETAILS-->
                <Button
                    android:id="@+id/btnReservationDetails"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reservation Details"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_red_24dp"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_red_24dp"
                    android:layout_gravity="top|start"
                    android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                </Button>

                <RelativeLayout
                    android:id="@+id/relLayReservationDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvSAMPLEDEFINITION"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem"
                        android:padding="3dp"/>

                </RelativeLayout>


                <Button
                    android:id="@+id/btnCancelReservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Widget.AppCompat.ActionButton"
                    android:text="CANCEL"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:background="@drawable/red_borderline"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="2dp"
                    android:elevation="4dp"/>

            </LinearLayout>

        </ScrollView>


    </android.support.v7.widget.CardView>

</FrameLayout>